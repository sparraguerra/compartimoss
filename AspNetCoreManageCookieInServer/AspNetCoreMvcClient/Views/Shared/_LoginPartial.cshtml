@using System.Security.Principal
@using System.Linq

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text text-dark">Hello @User.Claims.FirstOrDefault(t => t.Type == "name")?.Value!</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="SignOut">Sign out</a>
        </li>
    }
</ul>
